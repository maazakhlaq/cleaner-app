datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cleaner {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String?
  bookings  Booking[]
}

model Customer {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String?
  password  String
  bookings  Booking[]
}

model Booking {
  id          Int       @id @default(autoincrement())
  date        DateTime
  service     String

  // Customer relation
  customerId  Int
  customer    Customer  @relation(fields: [customerId], references: [id])

  // Cleaner relation
  cleanerId   Int
  cleaner     Cleaner   @relation(fields: [cleanerId], references: [id])
}
